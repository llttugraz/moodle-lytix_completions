{{!
  @template lytix_config/learners_corner

  Lytix Activity Completion Widget

  This widget renders a table of all activities and their completion status.

  Classes required for JS:
  * lytix_completions/activity_completion

  Context variables required for this template:
  See example below.

  Example context (json):
  {
     "userid": 0,
     "contextid": 0,
     "courseid": 0
  }
}}

<div id='activity-completion' class='widget loading'>

    <h3>{{#str}} activity_statistic, lytix_completions {{/str}}</h3>
    <div class='p-3'>
        <svg class='d-none' xmlns='http://www.w3.org/2000/svg'>
             <defs>
                  <polygon id='sorting-arrow' points='0,0 10,0 5,7'/>
             </defs>
        </svg>

        <div id='activity-completion-table' class='content p-1' hidden></div>
    </div>

</div>

{{#js}}
    require(['lytix_completions/activity_completion'], function(m) {
        m.init({{userid}}, {{contextid}}, {{courseid}});
    });
{{/js}}
